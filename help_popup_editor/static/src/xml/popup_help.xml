<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="ViewManagerAction" t-extend="ViewManagerAction">
        <t t-jquery="h2.oe_view_title" t-operation="before">
            <span style="display: none"
                  class=" view_help_customization"
                  title="Edit user help">
                <img t-att-src='_s + "/web/static/src/img/icons/gtk-edit.png"'/>
            </span>
        </t>
        <t t-jquery=".view_help" t-operation="replace">
            <span class=" view_help"
                  title="Show user help">
                <img t-att-src='_s + "/web/static/src/img/icons/gtk-info.png"'/>
            </span>
        </t>
    </t>
</templates>
